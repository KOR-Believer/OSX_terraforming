{
  "title": "SIMULATE FC660C (`RIGHT_OPTION` AS `FN`)",
  "rules": [{
      "description": "right_option + Esc to `",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde"
        }]
      }]
    },

    {
      "description": "shift + Esc to ~",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "shift"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "shift"
          ]
        }]
      }]
    },

    {
      "description": "right_option + shift + Esc to ~",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "shift", "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "shift"
          ]
        }]
      }]
    }

    ,
    {
      "description": "right_option + up_arrow to page_up",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "up_arrow",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "page_up"
        }]
      }]
    },
    {
      "description": "right_option + down_arrow to page_down",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "down_arrow",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "page_down"
        }]
      }]
    },
    {
      "description": "right_option + left_arrow to home",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "left_arrow",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "home"
        }]
      }]
    },
    {
      "description": "right_option + right_arrow to end",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "right_arrow",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "end"
        }]
      }]
    },


    {
      "description": "right_option + 0 to mute",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "0",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "mute"
        }]
      }]
    },
    {
      "description": "right_option + hyphen to volume_decrement",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "hyphen",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "volume_decrement"
        }]
      }]
    },
    {
      "description": "right_option + equal_sign to volume_increment",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "equal_sign",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "volume_increment"
        }]
      }]
    },
    {
      "description": "right_option + 1 to display_brightness_decrement",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "1",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "display_brightness_decrement"
        }]
      }]
    },
    {
      "description": "right_option + 2 to display_brightness_increment",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "2",
          "modifiers": {
            "mandatory": [
              "right_option"
            ]
          }
        },
        "to": [{
          "key_code": "display_brightness_increment"
        }]
      }]
    },

    {
      "description": "right_option + left_control + Esc, Tilde to left_control + Tilde",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "right_option", "left_control"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "left_control"
          ]
        }]
      }]
    },
    {
      "description": "right_option + left_command + Esc, Tilde to left_command + Tilde",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "right_option", "left_command"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "left_command"
          ]
        }]
      }]
    }, {
      "description": "right_option + left_control + shift + Esc, Tilde to left_control + shift + Tilde",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "right_option", "left_control", "shift"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "left_control", "shift"
          ]
        }]
      }]
    }
    ,{
      "description": "right_option + left_command + shift + Esc, Tilde to left_command + shift + Tilde",
      "manipulators": [{
        "type": "basic",
        "from": {
          "key_code": "escape",
          "modifiers": {
            "mandatory": [
              "right_option", "left_command", "shift"
            ]
          }
        },
        "to": [{
          "key_code": "grave_accent_and_tilde",
          "modifiers": [
            "left_command", "shift"
          ]
        }]
      }]
    }
  ]

}
